<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/bg_dialog_location">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView_title_dialog_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Want to create an invitation?"
            android:textColor="@color/textViewTitle_dialog_location"
            android:background="@color/title_bg_dialog_location" />



    <TextView

        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Create, edit and share your own invitation, Choose create now button to create."
        android:textSize="16sp" />



<LinearLayout
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.textview.MaterialTextView
       android:gravity="right"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:textSize="13sp"
        android:id="@+id/no_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NO,  CONTINUE" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_now"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Create now"
        android:textColor="@color/white"
        app:backgroundTint="@color/button_bg"
        app:cornerRadius="50dp" />


</LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>