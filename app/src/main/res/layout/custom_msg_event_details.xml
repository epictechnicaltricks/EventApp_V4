<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"


	android:layout_height="wrap_content"
	android:orientation="horizontal">
	<androidx.cardview.widget.CardView
		app:cardBackgroundColor="@color/card_backgroung"
		android:id="@+id/cardview1"
		android:layout_margin="10dp"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		app:cardElevation="4dp"
		app:cardCornerRadius="5dp">
		<LinearLayout

			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="6dp"
			android:orientation="vertical">

			<TextView

				android:id="@+id/user_name"
				android:focusable="false"
				android:gravity="left"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="6dp"

				android:maxLines="2"
				android:ellipsize="end"
				android:paddingLeft="8dp"
				android:paddingTop="3dp"
				android:paddingBottom="0dp"
				android:paddingRight="8dp"
				android:text="User name"
				android:textSize="14sp"
				android:textStyle="bold"
				android:textColor="@color/textView_title_ed"/>
			<TextView

				android:layout_marginBottom="10dp"
				android:maxLines="3"
				android:ellipsize="end"
				android:id="@+id/message"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:layout_marginLeft="6dp"

				android:paddingLeft="8dp"
				android:paddingTop="0dp"
				android:paddingBottom="0dp"
				android:paddingRight="8dp"

				android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum ut nisl a diam cursus cursus at at dui. Mauris ut pharetra orci. Integer condimentum diam in magna ornare, et sollicitudin nulla sollicitudin. Proin non ante condimentum, dignissim elit at, convallis nulla. Aliquam nisi velit, molestie non ipsum sit amet, eleifend accumsan velit. In ac pharetra leo. Donec sit amet sagittis lacus, eget mollis felis. Suspendisse potenti. Phasellus facilisis ante vel leo pharetra fermentum. Cras ac est elit. Quisque commodo, nibh ac pretium consequat, quam nunc lobortis magna, in laoreet risus mi posuere justo. Donec porta,  "
				android:textSize="12sp"
				android:textColor="#757575"/>


			<LinearLayout
				android:padding="8dp"
				android:gravity="center"
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_marginStart="15dp"
					android:layout_weight="1"
					android:layout_marginEnd="15dp"
					android:textColor="@color/about_us_SubText"
					android:id="@+id/date"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="8dp"
					android:textSize="12sp"
					android:layout_gravity="right"
					android:text=""
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>

				<ImageView
                    android:alpha="0.9"
					android:layout_gravity="center_horizontal"
					android:scaleType="centerInside"
					android:background="@drawable/shape"
					android:elevation="4dp"
					android:id="@+id/report_review"
					android:layout_marginEnd="20dp"
					android:layout_marginTop="0dp"
					android:layout_marginBottom="8dp"
					android:src="@drawable/info"
					android:layout_width="19dp"
					android:layout_height="19dp"/>

				<TextView
					android:textColor="@color/textView_readmore"
					android:gravity="right"

					android:layout_marginEnd="15dp"

					android:id="@+id/more_"
					android:layout_marginTop="13dp"
					android:layout_marginBottom="8dp"
					android:textSize="12sp"
					android:layout_gravity="right"
					android:text="Read more"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>



			</LinearLayout>


		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>
